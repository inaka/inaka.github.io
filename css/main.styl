ul,ol,h1,h2,h3,h4,h5,h6,pre,form,body,html,p,blockquote,fieldset,input,td
  padding 0
  margin 0

li
  list-style none

body
  background-color #efefef
  font-family 'Open Sans', sans-serif
  font-size 14px
  line-height 1em
  font-size 2em

.header
  position relative
  width 960px
  z-index 2

.navbar
  background rgba(212, 213, 212, .5)
  padding 10px 0
  letter-spacing 1px
  -webkit-transition background .8s ease-in-out,padding .8s ease-in-out
  -moz-transition background .8s ease-in-out,padding .8s ease-in-out
  transition background .8s ease-in-out,padding .8s ease-in-out
  border 0px


.navbar-custom .nav li a:hover,
.navbar-custom .nav li a:focus
    outline: 0
    background-color rgba(255,255,255,.5)

.navbar-custom a,
.navbar-custom a:hover,
.navbar-custom a:focus
    color #000

.information
  margin-top 100px

#projects h1
  margin 20px 0px

.project
  padding 10px
  margin 15px 0px
  color #FFF

.project h2
  font-size 1.2em
  margin-bottom 3px
  font-weight bold

.project p.lang
  font-size 0.6em

.project p.desc
  margin-top 5px
  font-size 0.8em

.project .github
  float right